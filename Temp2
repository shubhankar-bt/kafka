// In AuthController.java, add this new method:

    /**
     * Refreshes the Access Token.
     * 1. Validates the incoming refresh token.
     * 2. Checks if the User's session is still active in Redis (USR:<userId>).
     * 3. Generates a NEW JTI and updates Redis (Rotating the session).
     */
    @PostMapping(value = "/refresh-token", produces = MediaType.APPLICATION_JSON_VALUE)
    public LoginResponseDTO refreshToken(@RequestBody Map<String, String> body) {
        String refreshToken = body.get("refreshToken");

        if (refreshToken == null || refreshToken.isBlank()) {
            return LoginResponseDTO.builder().error("Missing refresh token").build();
        }

        try {
            // 1. Verify Crypto Signature (Using same secret for simplicity, or use specific refresh secret)
            var parser = io.jsonwebtoken.Jwts.parser()
                    .verifyWith(io.jsonwebtoken.security.Keys.hmacShaKeyFor(Base64.getDecoder().decode(hmacSecret)))
                    .build();
            
            var claims = parser.parseSignedClaims(refreshToken).getPayload();
            String userId = claims.getSubject();

            // 2. Check Distributed Session in Redis
            // If the key is gone, the user session has timed out globally.
            String userKey = USER_PREFIX + userId;
            String currentJti = redisTemplate.opsForValue().get(userKey).block();

            if (currentJti == null) {
                return LoginResponseDTO.builder().error("Session expired. Please login again.").build();
            }

            // 3. Generate NEW Access Token (New JTI)
            // Ideally fetch role from DB, but for speed, we might reuse claims if acceptable
            // Here assuming we just refresh the session validity
            Map<String, Object> newClaims = new java.util.HashMap<>(claims);
            // Update expiration
            
            String newAccessToken = HmacJwtUtil.generate(hmacSecret, userId, ttlSeconds, newClaims);

            // 4. Extract NEW JTI
            var newClaimsJws = parser.parseSignedClaims(newAccessToken);
            String newJti = newClaimsJws.getPayload().getId();

            // 5. ROTATE SESSION (Update Redis)
            // This invalidates the PREVIOUS Access Token immediately because JTIs won't match anymore.
            validator.registerUserSession(userId, newJti).block();
            log.info("Token Refreshed for User: {}. New JTI: {}", userId, newJti);

            return LoginResponseDTO.builder()
                    .userId(userId)
                    .accessToken(newAccessToken)
                    .refreshToken(refreshToken) // Return same or rotate refresh token
                    .expiresIn(ttlSeconds)
                    .jti(newJti)
                    .tokenType("Bearer")
                    .validCredentials(true)
                    .build();

        } catch (Exception e) {
            log.error("Refresh Token Failed: {}", e.getMessage());
            return LoginResponseDTO.builder().error("Invalid or Expired Refresh Token").build();
        }
    }










